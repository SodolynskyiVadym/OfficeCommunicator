@page "/tes"

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Increase</button>

<button class="btn btn-secondary" @onclick="() => currentCount -= 1">Decrease</button>

<button class="btn btn-primary" @onclick="() => currentCount = 0">Reset</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}